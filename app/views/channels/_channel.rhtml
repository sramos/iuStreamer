<% form_for @channel do |form| %>  
 <%= form.error_messages %><br />
 <%= form.label :name, "Nombre" %> <%= form.text_field :name %><br />
 <%= form.label :description, "Descricion" %> <%= form.text_field :description %><br />
 <%= form.label :email, "Email" %> <%= form.text_field :email %><br />
 <%= form.label :password, "Password" %> <%= form.password_field :password %><br />
 <%= form.label :password_confirmation, "Repita Password" %> <%= form.password_field :password_confirmation %><br />
 <%= form.submit "Submit" %><br />
<% end %> 
