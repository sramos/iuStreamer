
<div class="form">
  <% form_for @channel do |form| %>  
    <%= form.error_messages %><br />
    <% unless @channel.id %>
      <div class="form-line right"><%= form.label :name, "Nombre:", :class => "left" %> <%= form.text_field :name, :class => "left" %></div>
      <div class="form-line right"><%= form.label :description, "Tema:", :class => "left" %> <%= form.text_field :description, :class => "left" %></div>
    <% end %>
    <div class="form-line right"><%= form.label :email, "Email:", :class => "left" %> <%= form.text_field :email, :class => "left" %></div>
    <div class="form-line right"><%= form.label :password, "Password:", :class => "left" %> <%= form.password_field :password, :class => "left" %></div>
    <div class="form-line right"><%= form.label :password_confirmation, "Repita:", :class => "left" %> <%= form.password_field :password_confirmation, :class => "left" %></div>
    <div class="form-line right"><%= form.submit "Enviar", :class => "right" %></div>
  <% end %> 
</div>
