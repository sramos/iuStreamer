  <% @videos.each do |video| %>
    <div class="video">
      <div class="video-thumbnail">
        <%= link_to '<img src="/images/colour-bars.png" alt="Video thumbnail" />', :controller => :videos, :action => :show, :id => video.id %>
      </div>
      <div class="video-data">
        <div class="video-title">
          <div class="normal">Título:</div>
          <% if video.channel == current_channel %>
            <div id='video_title_<%= video.id %>' class='editable'><%= video.title || "Pulsa aquí para cambiar el nombre" %></div>
            <div id="video_edit_title_<%= video.id %>" class="editable" style="display:none;"><%= video.title %></div>
          <% else %>
            <div id='video_title_<%= video.id %>'><%= video.title || "Sin título" %></div>
          <% end %>
        </div>
        <div class="video-details">Emitido: <%= video.created_at %></div>
        <div class="video-details">Reproducciones: <%= video.views %></div>
        <div class="video-details">Público: <%= video.public ? "Sí" : "No" %></div>
      </div>
    </div>
  <% end %>
  <% if @videos.total_pages > @videos.current_page %>
    <div id="mas_videos" class="resaltado">
      <div id="spinner" style="display:none;"></div>
      <%= link_to_remote "- Más Vídeos -", :url => { :controller => 'channels', :action => 'mas_videos', :page => @videos.current_page+1, :id => id }, :loading => "Element.show('spinner')", :complete => "Element.hide('spinner')" %>
    </div>
  <% end %>

